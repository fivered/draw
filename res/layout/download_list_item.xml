<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:padding="4dp" >

    <TextView
        android:id="@+id/download_item_text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|left"
        android:layout_margin="4dp"
        android:maxLines="2"
        android:layout_toLeftOf="@+id/download_item_btn"
        android:text="@+id/download_item_text1"
        android:textColor="@android:color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/download_item_text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:maxLines="2"
        android:layout_below="@+id/download_item_text1"
        android:layout_toLeftOf="@+id/download_item_btn"
        android:text="@+id/download_item_text2"
        android:textSize="12sp" />
    <TextView
        android:id="@+id/download_item_filesize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginBottom="10dp"
        android:singleLine="true"
        android:layout_below="@+id/download_item_text2"
        android:layout_toLeftOf="@+id/download_item_btn"
        android:text="@+id/download_item_filesize"
        android:textSize="12sp" />
	
    <Button
        android:id="@+id/download_item_btn"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:minHeight="40dp"
        android:layout_margin="4dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="下载中98%"/>

</RelativeLayout>